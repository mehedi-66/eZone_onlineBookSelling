@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "CoverType";
}

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">CoverType List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-contrller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Create New Category </a>
        </div>
    </div>
</div>

<br /> 

<table class="table table-bordered table-striped" style="width: 100%">
       <thead>
           <tr>
               <th>
                   Category Name
               </th>
              
               <th></th>
           </tr>
       </thead>
       <tbody>
           @foreach(var obj in Model)
           {
               <tr>
                   <td width="50%">@obj.Name</td>
                  
                   <td>
                    <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">Delete</a>
                   </td>
               </tr>
           }
       </tbody>
</table>